@model IEnumerable<MemLand.Models.FunnyImages.Mem>

@{
    ViewBag.Title = "PostOrNoMem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PostOrNoMem</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PathImg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostedOn)
        </th>
        @*<th>
            Active or not
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PathImg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostMem)
        </td>
        @*@using (@Html.BeginForm())
        {
            <td>
                <input type="checkbox" name="poster"/>
                <input type="submit" value="Active" class="btn btn-info"/>
            </td>
        }*@
        
        <td>
            @Html.ActionLink("Active mem", "ActivePost", new { id=item.Id }, new { @class="btn-link"})
        </td>
        <td>
            @Html.ActionLink("Active mem", "DeleteMem", new { id=item.Id }, new { @class="btn-link"})
        </td>
    </tr>
}

</table>
